{
  "compilerOptions": {
    "target": "es2015",
    "lib": [ "es2015" ],
    "module": "commonjs",
    "outDir": "out",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/index.ts"
  ]
}
  